---
# Based on ansible-lint config
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
    level: warning
  comments: disable
  comments-indentation: disable
  new-line-at-end-of-file: disable
  new-lines:
    type: unix
  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'

ignore: |
  .github/stale.yml
  .travis.yml
